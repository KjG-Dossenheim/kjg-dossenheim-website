  "dependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@tinacms/cli": "^1.5.2",
    "flowbite": "^1.6.4",
    "tinacms": "^1.4.3",
    "webpack": "^5.78.0"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.0",
