{
  "name": "tina-hugo-starter",
  "version": "1.0.0",
  "description": "A starter for TinaCMS with Hugo",
  "main": "index.js",
  "scripts": {
    "dev": "tinacms dev -c \"hugo server -D\"",
    "dev-hugo": "hugo server -D",
    "build": "tinacms build && webpack && npm run build-tw && hugo",
    "dev-tw": "npx tailwindcss -i ./assets/main.css -o ./assets/style.css --watch",
    "build-tw": "npx tailwindcss -i ./assets/main.css -o ./assets/style.css ",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinalabs/vanilla-hugo.git"
  },
